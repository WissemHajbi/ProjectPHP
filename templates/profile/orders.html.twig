{% extends 'base.html.twig' %}

{% block title %}My Orders{% endblock %}

{% block body %}
<h1>My Orders</h1>
<hr>

{% if orders|length > 0 %}
    <div class="row">
        {% for order in orders %}
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            Order #{{ order.reference }}
                            <span class="badge
                                {% if order.status == 'PENDING' %}bg-warning
                                {% elseif order.status == 'CONFIRMED' %}bg-info
                                {% elseif order.status == 'SHIPPED' %}bg-primary
                                {% else %}bg-secondary{% endif %}">
                                {{ order.status }}
                            </span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Order Date:</strong> {{ order.createdAtFormatted }}</p>
                                <p><strong>Total:</strong> €{{ order.total }}</p>
                                <p><strong>Delivery Address:</strong> {{ order.deliveryAddress ?: 'Not specified' }}</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Items:</h6>
                                <ul class="list-group list-group-flush">
                                    {% for item in order.items %}
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            {{ item.book.title }}
                                            <span class="badge bg-secondary rounded-pill">{{ item.quantity }} x €{{ item.price }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>You haven't placed any orders yet.
    </div>
{% endif %}
{% endblock %}