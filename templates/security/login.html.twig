{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block hero %}
<div class="hero-section">
    <h1><i class="fas fa-sign-in-alt me-2"></i>Welcome Back</h1>
    <p>Sign in to your account to continue shopping</p>
</div>
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger animate-fade-in">
                    <i class="fas fa-exclamation-triangle me-2"></i>{{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-user-circle me-2"></i>Please Sign In</h3>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label fw-semibold">
                            <i class="fas fa-envelope me-2"></i>Email Address
                        </label>
                        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control form-control-lg" autocomplete="email" required autofocus placeholder="Enter your email">
                    </div>
                    <div class="mb-4">
                        <label for="inputPassword" class="form-label fw-semibold">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                        <input type="password" name="_password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required placeholder="Enter your password">
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary btn-lg w-100 mb-3" type="submit">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </button>

                    <div class="text-center">
                        <small class="text-muted">Don't have an account? <a href="{{ path('app_register') }}" class="text-decoration-none fw-semibold">Create one here</a></small>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
