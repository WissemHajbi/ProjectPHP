{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block hero %}
<div class="hero-section">
    <h1><i class="fas fa-user-plus me-2"></i>Join MyBookstore</h1>
    <p>Create your account and start exploring our collection</p>
</div>
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Create Your Account</h3>
            </div>
            <div class="card-body p-4">
                {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.firstname, {
                                'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your first name'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.lastname, {
                                'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your last name'}
                            }) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.email, {
                            'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your email address'}
                        }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.phone, {
                            'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your phone number'}
                        }) }}
                    </div>
                    <div class="mb-4">
                        {{ form_row(registrationForm.plainPassword, {
                            'label': 'Password',
                            'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Create a strong password'}
                        }) }}
                    </div>
                    <div class="mb-4">
                        {{ form_row(registrationForm.agreeTerms, {
                            'label': 'I agree to the Terms and Conditions'
                        }) }}
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </button>
                {{ form_end(registrationForm) }}

                <div class="text-center">
                    <small class="text-muted">Already have an account? <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold">Sign in here</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
