{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block body %}
<h1>Checkout</h1>
<div class="row">
    <div class="col-md-8">
        <h3>Order Summary</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Qty</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.book.title }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.book.price * item.quantity }} €</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2" class="text-end"><strong>Total:</strong></td>
                    <td><strong>{{ total }} €</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="col-md-4">
        <h3>Shipping Info</h3>
        <form action="{{ path('app_order_confirm') }}" method="post">
            <div class="mb-3">
                <label class="form-label">Delivery Address</label>
                <textarea name="address" class="form-control" rows="4" required>{{ address }}</textarea>
            </div>
            <button type="submit" class="btn btn-success w-100">Confirm Order</button>
        </form>
    </div>
</div>
{% endblock %}
