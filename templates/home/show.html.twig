{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} - MyBookstore{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_home', {'category': book.category.id}) }}">{{ book.category.name }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ book.title }}</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Book Image -->
            <div class="col-lg-5 col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        {% if book.coverImage %}
                            <img src="{{ asset('uploads/covers/' ~ book.coverImage) }}" class="img-fluid rounded" alt="{{ book.title }}" style="width: 100%; max-height: 500px; object-fit: cover;">
                        {% else %}
                            <div class="d-flex justify-content-center align-items-center bg-light text-muted rounded" style="height: 400px; font-size: 4rem;">
                                <i class="fas fa-book"></i>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Book Details -->
            <div class="col-lg-7 col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <h1 class="display-5 fw-bold mb-3">{{ book.title }}</h1>
                            <h4 class="text-muted mb-3">
                                <i class="fas fa-user me-2"></i>{{ book.authors|map(a => a.name)|join(', ') }}
                            </h4>
                            <div class="mb-3">
                                <span class="badge bg-secondary me-2">
                                    <i class="fas fa-tag me-1"></i>{{ book.category.name }}
                                </span>
                                <span class="badge bg-info text-dark">
                                    <i class="fas fa-building me-1"></i>{{ book.publisher.name }}
                                </span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <span class="h2 text-success fw-bold mb-0 me-3">{{ book.price }} €</span>
                                <div>
                                    {% if book.stock <= 0 %}
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times-circle me-1"></i>Out of Stock
                                        </span>
                                    {% elseif book.stock <= 5 %}
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Low Stock ({{ book.stock }} left)
                                        </span>
                                    {% else %}
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check-circle me-1"></i>In Stock ({{ book.stock }} available)
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="mb-4">
                                {% if book.stock > 0 %}
                                    <a href="{{ path('app_cart_add', {id: book.id}) }}" class="btn btn-primary btn-lg me-3">
                                        <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                    </a>
                                {% else %}
                                    <button class="btn btn-secondary btn-lg me-3" disabled>
                                        <i class="fas fa-ban me-2"></i>Out of Stock
                                    </button>
                                {% endif %}
                                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Catalog
                                </a>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <h5 class="mb-3"><i class="fas fa-info-circle me-2"></i>Description</h5>
                            <div class="border-start border-primary border-4 ps-3">
                                <p class="mb-0 text-muted">{{ book.description|nl2br }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Information -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-book-open me-2"></i>Book Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong><i class="fas fa-hashtag me-2"></i>ISBN:</strong> {{ book.isbn }}</p>
                                <p><strong><i class="fas fa-tags me-2"></i>Category:</strong> {{ book.category.name }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong><i class="fas fa-building me-2"></i>Publisher:</strong> {{ book.publisher.name }}</p>
                                <p><strong><i class="fas fa-users me-2"></i>Author:</strong> {{ book.authors|map(a => a.name)|join(', ') }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Books -->
        {% if relatedBooks|length > 0 %}
            <div class="row mt-5">
                <div class="col-12">
                    <h3 class="mb-4"><i class="fas fa-books me-2"></i>Related Books</h3>
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                        {% for relatedBook in relatedBooks %}
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <div class="position-relative">
                                        {% if relatedBook.coverImage %}
                                            <img src="{{ asset('uploads/covers/' ~ relatedBook.coverImage) }}" class="card-img-top" alt="{{ relatedBook.title }}" style="height: 200px; object-fit: cover;">
                                        {% else %}
                                            <div class="d-flex justify-content-center align-items-center bg-light text-muted" style="height: 200px; font-size: 2rem;">
                                                <i class="fas fa-book"></i>
                                            </div>
                                        {% endif %}
                                        <div class="position-absolute top-0 end-0 m-2">
                                            {% if relatedBook.stock <= 0 %}
                                                <span class="badge bg-danger">Out of Stock</span>
                                            {% elseif relatedBook.stock <= 5 %}
                                                <span class="badge bg-warning text-dark">Low Stock</span>
                                            {% else %}
                                                <span class="badge bg-success">{{ relatedBook.stock }} in stock</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h6 class="card-title text-truncate mb-2" title="{{ relatedBook.title }}">{{ relatedBook.title }}</h6>
                                        <p class="card-text text-muted small mb-2">{{ relatedBook.authors|map(a => a.name)|join(', ') }}</p>
                                        <div class="mt-auto">
                                            <p class="card-text fw-bold text-success mb-2">{{ relatedBook.price }} €</p>
                                            <div class="d-flex gap-1">
                                                <a href="{{ path('app_book_show', {id: relatedBook.id}) }}" class="btn btn-outline-info btn-sm flex-fill">View</a>
                                                {% if relatedBook.stock > 0 %}
                                                    <a href="{{ path('app_cart_add', {id: relatedBook.id}) }}" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
