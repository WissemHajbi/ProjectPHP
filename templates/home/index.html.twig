{% extends 'base.html.twig' %}

{% block title %}MyBookstore - Discover Your Next Great Read{% endblock %}

{% block hero %}
<section class="hero-section">
    <div class="container">
        <h1>Welcome to MyBookstore</h1>
        <p>Discover, explore, and purchase your favorite books from our extensive collection.</p>
        <a href="#catalog" class="btn btn-light btn-lg mt-3"><i class="fas fa-arrow-down me-2"></i>Browse Books</a>
    </div>
</section>
{% endblock %}

{% block body %}
<div class="row" id="catalog">
    <!-- Sidebar Filters -->
    <div class="col-lg-3 col-md-4">
        <div class="filter-card sticky-top" style="top: 2rem;">
            <h4 class="mb-3"><i class="fas fa-filter me-2"></i>Filters</h4>
            <form action="{{ path('app_home') }}" method="get">
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fas fa-search me-1"></i>Search</label>
                    <input type="text" name="q" class="form-control" value="{{ search.q }}" placeholder="Title, author...">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fas fa-tags me-1"></i>Category</label>
                    <select name="category" class="form-select">
                        <option value="">All Categories</option>
                        {% for c in categories %}
                            <option value="{{ c.id }}" {{ search.category == c.id ? 'selected' : '' }}>{{ c.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fas fa-user me-1"></i>Author</label>
                    <select name="author" class="form-select">
                        <option value="">All Authors</option>
                        {% for a in authors %}
                            <option value="{{ a.id }}" {{ search.author == a.id ? 'selected' : '' }}>{{ a.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fas fa-building me-1"></i>Publisher</label>
                    <select name="publisher" class="form-select">
                        <option value="">All Publishers</option>
                        {% for p in publishers %}
                            <option value="{{ p.id }}" {{ search.publisher == p.id ? 'selected' : '' }}>{{ p.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-filter me-1"></i>Apply Filters</button>
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary"><i class="fas fa-times me-1"></i>Clear All</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Listings -->
    <div class="col-lg-9 col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0"><i class="fas fa-book-open me-2"></i>Book Catalog</h2>
            <span class="badge bg-primary fs-6">{{ totalBooks }} books found</span>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for book in books %}
                <div class="col animate-fade-in" style="animation-delay: {{ loop.index * 0.1 }}s;">
                    <div class="card h-100">
                        <div class="position-relative">
                            {% if book.coverImage %}
                                <img src="{{ asset('uploads/covers/' ~ book.coverImage) }}" class="card-img-top" alt="{{ book.title }}" style="height: 280px; object-fit: cover;">
                            {% else %}
                                <div class="d-flex justify-content-center align-items-center bg-light text-muted" style="height: 280px; font-size: 4rem;">
                                    <i class="fas fa-book"></i>
                                </div>
                            {% endif %}
                            <div class="position-absolute top-0 end-0 m-2 d-flex gap-1">
                                {% if book.stock <= 0 %}
                                    <span class="badge bg-danger">Out of Stock</span>
                                {% elseif book.stock <= 5 %}
                                    <span class="badge bg-warning text-dark">Low Stock</span>
                                {% else %}
                                    <span class="badge bg-success">{{ book.stock }} in stock</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate mb-2" title="{{ book.title }}">{{ book.title }}</h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="fas fa-user me-1"></i>{{ book.authors|map(a => a.name)|join(', ') }}
                            </p>
                            <p class="card-text small text-muted mb-2">
                                <i class="fas fa-building me-1"></i>{{ book.publisher.name }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <span class="h5 text-success fw-bold mb-0">{{ book.price }} â‚¬</span>
                                <div>
                                    <a href="{{ path('app_book_show', {id: book.id}) }}" class="btn btn-outline-info btn-sm me-1" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    {% if book.stock > 0 %}
                                        <a href="{{ path('app_cart_add', {id: book.id}) }}" class="btn btn-primary btn-sm" title="Add to Cart">
                                            <i class="fas fa-cart-plus"></i>
                                        </a>
                                    {% else %}
                                        <button class="btn btn-secondary btn-sm" disabled title="Out of Stock">
                                            <i class="fas fa-ban"></i>
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-4x text-muted mb-4"></i>
                        <h3 class="text-muted">No books found</h3>
                        <p class="text-muted mb-4">Try adjusting your search criteria or browse all books.</p>
                        <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                            <i class="fas fa-refresh me-2"></i>Show All Books
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        {% if totalPages > 1 %}
            <nav aria-label="Book pagination" class="mt-5">
                <ul class="pagination justify-content-center">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_home', search|merge({'page': currentPage - 1})) }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    {% endif %}

                    {% for page in 1..totalPages %}
                        {% if page >= currentPage - 2 and page <= currentPage + 2 %}
                            <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                                <a class="page-link" href="{{ path('app_home', search|merge({'page': page})) }}">{{ page }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_home', search|merge({'page': currentPage + 1})) }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    </div>
</div>
{% endblock %}
