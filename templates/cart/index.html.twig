{% extends 'base.html.twig' %}

{% block title %}Your Shopping Cart - MyBookstore{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex align-items-center mb-4">
            <i class="fas fa-shopping-cart fa-2x text-primary me-3"></i>
            <h1 class="mb-0">Your Shopping Cart</h1>
        </div>

        {% if items|length > 0 %}
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th class="border-0 ps-4">Book</th>
                                    <th class="border-0 text-center">Price</th>
                                    <th class="border-0 text-center">Quantity</th>
                                    <th class="border-0 text-center">Total</th>
                                    <th class="border-0 text-center pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in items %}
                                    <tr class="animate-fade-in">
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    {% if item.book.coverImage %}
                                                        <img src="{{ asset('uploads/covers/' ~ item.book.coverImage) }}" alt="{{ item.book.title }}" class="rounded" style="width: 60px; height: 80px; object-fit: cover;">
                                                    {% else %}
                                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 80px;">
                                                            <i class="fas fa-book fa-lg text-muted"></i>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">{{ item.book.title }}</h6>
                                                    <small class="text-muted">{{ item.book.authors|map(a => a.name)|join(', ') }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center align-middle fw-semibold">{{ item.book.price }} €</td>
                                        <td class="text-center align-middle">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <a href="{{ path('app_cart_decrease', {id: item.book.id}) }}" class="btn btn-sm btn-outline-secondary me-2" title="Decrease quantity">
                                                    <i class="fas fa-minus"></i>
                                                </a>
                                                <span class="fw-semibold mx-2">{{ item.quantity }}</span>
                                                <a href="{{ path('app_cart_increase', {id: item.book.id}) }}" class="btn btn-sm btn-outline-secondary ms-2" title="Increase quantity">
                                                    <i class="fas fa-plus"></i>
                                                </a>
                                            </div>
                                        </td>
                                        <td class="text-center align-middle fw-bold text-success">{{ item.book.price * item.quantity }} €</td>
                                        <td class="text-center align-middle pe-4">
                                            <a href="{{ path('app_cart_remove', {id: item.book.id}) }}" class="btn btn-danger btn-sm" title="Remove from cart">
                                                <i class="fas fa-trash-alt me-1"></i>Remove
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                            </a>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="d-flex align-items-center justify-content-end">
                                <span class="me-3">
                                    <span class="text-muted">Total:</span>
                                    <span class="h4 text-success fw-bold mb-0">{{ total }} €</span>
                                </span>
                                <a href="{{ path('app_order_checkout') }}" class="btn btn-success btn-lg">
                                    <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
                <h2 class="text-muted mb-3">Your cart is empty</h2>
                <p class="text-muted mb-4">Looks like you haven't added any books to your cart yet.</p>
                <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-book-open me-2"></i>Start Shopping
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
