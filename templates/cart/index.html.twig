{% extends 'base.html.twig' %}

{% block title %}Your Cart{% endblock %}

{% block body %}
<h1>Your Cart</h1>

{% if items|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Book</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.book.title }}</td>
                    <td>{{ item.book.price }} €</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.book.price * item.quantity }} €</td>
                    <td>
                        <a href="{{ path('app_cart_remove', {id: item.book.id}) }}" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                <td><strong>{{ total }} €</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_home') }}" class="btn btn-secondary me-2">Continue Shopping</a>
        <a href="{{ path('app_order_checkout') }}" class="btn btn-success">Proceed to Checkout</a>
    </div>
{% else %}
    <p>Your cart is empty.</p>
    <a href="{{ path('app_home') }}" class="btn btn-primary">Go Shopping</a>
{% endif %}
{% endblock %}
